{
  "name": "@x-fix/poker-server",
  "version": "0.0.1",
  "description": "The back-end server which serves the poker-planning front-end web app",
  "main": "src/index.js",
  "scripts": {
    "build": "rm -rf build && tsc && mkdir build/static && cp -a node_modules/@x-fix/poker-planning-client/dist/. build/static",
    "deploy": "git push heroku main",
    "format": "prettier --ignore-path .gitignore --write \"**/*.(js|ts)\"",
    "lint": "eslint --ignore-path .gitignore",
    "start": "nodemon",
    "start:heroku": "heroku local web",
    "test": "jest",
    "test:watch": "jest --watch",
    "validate": "yarn lint && yarn format && yarn build && yarn test",
    "heroku-prebuild": "npm config set '@x-fix:registry' 'https://npm.pkg.github.com' && npm config set '//npm.pkg.github.com/:_authToken' \"${NPM_TOKEN}\"",
    "heroku-postbuild": "yarn add @x-fix/poker-planning-client@latest --exact"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/X-Fix/poker-server.git"
  },
  "author": "cameron.stroebel08@gmail.com",
  "license": "ISC",
  "homepage": "https://github.com/X-Fix/poker-server#readme",
  "bugs": {
    "url": "https://github.com/X-Fix/poker-server/issues"
  },
  "dependencies": {
    "@x-fix/poker-planning-client": "1.3.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "nanoid": "^3.1.20",
    "nanoid-dictionary": "^4.2.0",
    "socket.io": "^3.1.1"
  },
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.20",
    "@types/nanoid-dictionary": "^4.2.0",
    "@types/node": "^14.14.22",
    "@types/socket.io": "^2.1.13",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "eslint": "^7.2.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "engines": {
    "node": "15.x"
  },
  "prettier": {
    "singleQuote": true
  },
  "eslintConfig": {
    "env": {
      "browser": false,
      "es2021": true
    },
    "extends": [
      "airbnb-base",
      "plugin:@typescript-eslint/recommended",
      "plugin:jest/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint",
      "jest",
      "prettier"
    ],
    "rules": {
      "import/extensions": [
        "error",
        "ignorePackages",
        {
          "js": "never",
          "mjs": "never",
          "jsx": "never",
          "ts": "never"
        }
      ],
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": [
            "**/*.spec.ts"
          ],
          "optionalDependencies": false,
          "peerDependencies": false
        }
      ],
      "lines-between-class-members": "off",
      "no-param-reassign": "off"
    },
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [
            ".ts"
          ]
        }
      }
    }
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": ".ts,.js",
    "ignore": [],
    "exec": "ts-node ./src/index.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn format && lint-staged",
      "pre-push": "yarn validate"
    }
  },
  "lint-staged": {
    ".+(js|json|ts)": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_nodules/"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  }
}
