{
  "name": "poker-server",
  "version": "0.0.1",
  "description": "The back-end server which serves the poker-planning front-end web app",
  "main": "src/index.js",
  "scripts": {
    "build": "tsc",
    "lint": "eslint --ignore-path .gitignore",
    "format": "prettier --ignore-path .gitignore --write \"**/*.(js|tx)\"",
    "types": "tsc",
    "start": "nodemon",
    "test": "Coming soon...",
    "validate": "yarn lint && yarn format && yarn build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/X-Fix/poker-server.git"
  },
  "author": "cameron.stroebel08@gmail.com",
  "license": "ISC",
  "homepage": "https://github.com/X-Fix/poker-server#readme",
  "bugs": {
    "url": "https://github.com/X-Fix/poker-server/issues"
  },
  "dependencies": {
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/node": "^14.14.22",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "eslint": "^7.19.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "prettier": {
    "singleQuote": true
  },
  "eslintConfig": {
    "env": {
      "browser": false,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "rules": {}
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": ".ts,.js",
    "ignore": [],
    "exec": "ts-node ./src/index.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn validate && yarn test"
    }
  },
  "lint-staged": {
    ".+(js|json|ts)": [
      "prettier --write",
      "git add"
    ]
  }
}
